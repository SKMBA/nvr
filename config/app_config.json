{
  "logging": {
    "name": "nvr_logger",  
    "folder": "test_logs",
    "file": "logger.log",
    "level": "DEBUG",
    "console_enabled": true,
    "file_enabled": true,
    "format": "[%(asctime)s] [%(levelname)s] [%(name)s] %(message)s",
    "datefmt": "%Y-%m-%d %H:%M:%S",
    "max_queue_size": 500,
    "rotation": {
      "auto_delete_old_logs": false,
      "keep_last_n_days": 7,
      "max_log_file_size": "100MB"
    }
  }
}
